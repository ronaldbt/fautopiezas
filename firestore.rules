rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de repuestos
    match /repuestos/{repuestoId} {
      allow read: if true; // Cualquiera puede leer repuestos
      allow write: if false; // Solo admins pueden escribir (se maneja desde el servidor)
    }
    
    // Reglas para la colección de marcas
    match /marcas/{marcaId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Reglas para la colección de modelos
    match /modelos/{modeloId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Reglas para la colección de categorías
    match /categorias/{categoriaId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Reglas para la colección de usuarios (autenticación)
    match /users/{userId} {
      // Los usuarios pueden leer/escribir sus propios datos
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Los admins pueden leer/escribir todos los usuarios
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Reglas para la colección de usuarios (compatibilidad)
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para la colección de pedidos
    match /pedidos/{pedidoId} {
      // Los usuarios solo pueden leer/escribir sus propios pedidos
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || request.auth.uid == request.resource.data.userId);
      
      // Los admins pueden leer/escribir todos los pedidos
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Los vendedores pueden leer/escribir pedidos asignados a ellos o sin asignar
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'vendedor' &&
        (resource.data.asignadoA == request.auth.uid || !resource.data.keys().hasAny(['asignadoA']) || resource.data.asignadoA == null);
    }
  }
}







