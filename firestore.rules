rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de repuestos
    match /repuestos/{repuestoId} {
      allow read: if true; // Cualquiera puede leer repuestos
      allow write: if false; // Solo admins pueden escribir (se maneja desde el servidor)
    }
    
    // Reglas para la colección de marcas
    match /marcas/{marcaId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Reglas para la colección de modelos
    match /modelos/{modeloId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Reglas para la colección de categorías
    match /categorias/{categoriaId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Reglas para la colección de usuarios (si se implementa autenticación)
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}




